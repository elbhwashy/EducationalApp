<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elbhwashy.educationalapp.MainActivity"
    android:background="#8c169f4c"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Quiz"
        android:layout_marginLeft="120dp"
        android:textSize="30dp"
        android:padding="8dp"
        android:textStyle="bold|italic"
        />


    <TextView
        android:id="@+id/Q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1- What is the biggest number? "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#eb0a0906"
        android:paddingBottom="8dp"

        />
    <RadioGroup
        android:id="@+id/radio_Q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/Q1_An1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickQ1"
            android:text="8"
            android:textSize="12sp" />

        <RadioButton

        android:id="@+id/Q1_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:onClick="onClickQ1"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q1_An3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9"
        android:onClick="onClickQ1"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q1_An4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:onClick="onClickQ1"
        android:textSize="12sp"
        />
    </RadioGroup>


    <TextView
        android:id="@+id/Q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 - ( 5 + 3) * 2  = .... "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="#eb0a0906"
        android:paddingBottom="8dp"
        />
    <RadioGroup
        android:id="@+id/radio_Q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <RadioButton
        android:id="@+id/Q2_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14"
        android:onClick="onClickQ2"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q2_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13"
        android:onClick="onClickQ2"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q2_An3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="16"
        android:onClick="onClickQ2"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q2_An4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15"
        android:onClick="onClickQ2"
        android:textSize="12sp"
        />
    </RadioGroup>


    <TextView
        android:id="@+id/Q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3-  ( 7 + .... ) + ( 8 + .... ) = 30    "
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="#eb0a0906"
        android:paddingBottom="8dp"
        />
    <CheckBox
        android:id="@+id/Q3_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7 , 8"
        android:onClick="onClickQ3"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q3_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8 , 7"
        android:onClick="onClickQ3"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q3_An3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 , 1"
        android:onClick="onClickQ3"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q3_An4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 , 6"
        android:onClick="onClickQ3"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/Q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4- ( 9 + .... ) - ( 1 + .... ) = 9 "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#eb0a0906"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />
    <CheckBox
        android:id="@+id/Q4_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 , 5 "
        android:onClick="onClickQ4"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q4_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 , 0"
        android:onClick="onClickQ4"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q4_An3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 , 4 "
        android:onClick="onClickQ4"
        android:textSize="12sp"
        />
    <CheckBox
        android:id="@+id/Q4_An4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 , 3"
        android:onClick="onClickQ4"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/Q5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5- ( 10 - 2 ) / 4 = ...."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#eb0a0906"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />
    <EditText
        android:id="@+id/Q5_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/Q6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 - the smallest number ( 20 , 25 , 30 , 40 "
        android:textSize="20sp"
        android:textColor="#eb0a0906"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />
    <EditText

        android:id="@+id/Q6_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/Q7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7- ( 5 + 9 ) >  13"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:textColor="#eb0a0906"
        android:paddingBottom="8dp"
        />
    <RadioGroup
        android:id="@+id/radio_Q7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <RadioButton
        android:id="@+id/Q7_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="True"
        android:onClick="onClickQ7"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q7_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="False"
        android:onClick="onClickQ7"
        android:textSize="12sp"
        />
    </RadioGroup>


    <TextView
        android:id="@+id/Q8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8- ( 20 - 2 ) >= ( 25 - 6 )"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#eb0a0906"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />
    <RadioGroup
        android:id="@+id/radio_Q8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <RadioButton
        android:id="@+id/Q8_An1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="True"
        android:onClick="onClickQ8"
        android:textSize="12sp"
        />
    <RadioButton
        android:id="@+id/Q8_An2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="False"
        android:onClick="onClickQ8"
        android:textSize="12sp"
        />
    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/Btn_Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:padding="8dp"
            android:textColor="#000000"
            android:onClick="submitQuiz"
            android:layout_marginLeft="100dp"
            />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:padding="8dp"
            android:textColor="#000000"
            android:onClick="onClickReset"

            />



    </LinearLayout>

    <TextView
        android:id="@+id/quizScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "

        android:textSize="25dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textStyle="italic"
        />



</LinearLayout>
</ScrollView>